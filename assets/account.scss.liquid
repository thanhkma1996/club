// Account login

$color-black: #000000;
$color-white: #ffffff;
$font-montser: 'Montserrat-ExtraBold';
$color-2d:#2d2d2d;
$color-23: #232323;
$color-df: #dfdfdf;

.template-account-login,.template-account-register{
    max-width: 525px;
    h1 {
        letter-spacing: 8px;
        text-align: center;
        color: $color-black;
        font-family: $font-montser;
        text-transform: uppercase;
        margin-bottom: 70px;
    }

    .errors {
        ul {
            background-color: $color-2d;
            color: $color-black;
            padding: 7px 10px 7px 16px;
            li {
                list-style-type: none;
                color: $color-white;
            }
        }
    }

    .template-account-login-title-forgot-pw {
        display: none;
    }

    .account-recovery-toggle {
        font-size: 14px;
    }

    .account-register {
        display: none;
    }

    .submit-button,.btn-register {
        text-align: center;
        margin-top: 50px;
    }
}

@media (max-width: 767px) {
    .template-account-login,.template-account-register {
        padding-bottom: 35px;
        h1{
            font-size: 22px !important;
            margin: 18px 10px 28px 10px;
            line-height: normal;
            letter-spacing: 4px;
            padding-top: 18px;
        }

        .submit-button,.btn-register {
            margin-top: 30px;
        }

    }
}

// Reset password
.forgot-password {
    .template-account-login  {
        display: block;
        max-width: 800px;
        padding-bottom: 90px;
        .template-account-login-title-forgot-pw {
            display: block;
            margin-bottom: 74px;
        }
        .template-account-login-title {
            display: none;
        }

        .account-recovery {
            max-width: 525px;
            margin: 0 auto;
            p {
                font-size: 16px;
                line-height: 1.63;
                letter-spacing: normal;
                color: $color-2d;
                margin-bottom: 50px;
            }
        }

        .btn-resetpw {
            margin-top: 50px;
            text-align: center;
        }
    }
}

@media (max-width: 767px) {
    .forgot-password {
        .template-account-login {
            padding-bottom: 35px;
            .template-account-login-title-forgot-pw  {
                margin-bottom: 30px;
            }
            .account-recovery {
                p {
                    margin-bottom: 30px;
                }
            }

            .btn-resetpw  {
                margin-top: 30px;
            }
        }
    }
}

.shopify-challenge__container .shopify-challenge__button  {
    border-radius: 0;
    padding-left: 26px;
    padding-right: 26px;
    height: 42px;
    border: none;
    font-size: 14px;
    font-weight: 600;
    font-stretch: normal;
    font-style: normal;
    line-height: normal;
    letter-spacing: normal;
    text-align: center;
    color: #fff;
    background: #000;
    text-transform: uppercase;
}

// My account 
.template-account,.template-account-order {
    margin: 50px 0 60px 0;
    h1 {
        letter-spacing: 8px;
        text-align: center;
        color: $color-black;
        font-size: 40px;
        font-family: $font-montser;
        text-transform: uppercase;
        margin-bottom: 70px;
    }

    a {
        font-size: 15px;
        font-style: normal;
        line-height: 1.73;
        letter-spacing: normal;
        color: #2d2d2d;
    }

}

body.page-template-customers\/account\.order,body.page-template-customers\/order {
    .site-main {
        padding: 30px 0 100px;
    }
}

.columns-main {
    display: flex;
    max-width: 1070px;
    margin: 0 auto;
    .sidebar.sidebar-main {
        width: 147px;
        margin-right: 126px;
        ul {
            padding: 0;
            li {
                list-style-type: none;
                margin-bottom: 22px;
                a {
                    text-transform: uppercase;
                    font-size: 16px;
                    font-weight: 500;
                    line-height: normal;
                    letter-spacing: normal;
                    color: $color-black;
                    text-decoration: none;
                }
            }
        }
    }
    .content-my-account {
        display: grid;
        width: calc(100% - 273px);
        h2.page-title {
            max-width: max-content;
            font-size: 18px;
            line-height: 1.56;
            letter-spacing: normal;
            color:$color-23;
            font-family: $font-montser;
            padding-bottom: 10px;
            border-bottom: 2px solid $color-df;
            text-transform: uppercase;
        }
        .title-account {
            font-family: $font-montser;
            font-size: 28px;
            line-height: 1.14;
            letter-spacing: normal;
            color: $color-23;
        }

        .account-info,.container-address,.account-additional {
            margin-bottom: 60px;
        }

        .btn-add-new {
            background-color: #2d2d2d;
            max-width: 221px;
            margin-top: 30px;
            text-align: center;
            a {
                font-size: 14px;
                color: #ffffff;
                text-transform: uppercase;
                text-decoration: none;
                padding: 20px;
                line-height: 42px;
                font-family: 'inter_regular';
            }
        }

        .account-address {
            .billing-address,.shipping-address {
                float: left;
                width: 49.5%;
            }

            h2 {
                font-family: 'Montserrat-Bold';
                font-size: 15px;
                font-weight: bold;
                line-height: 1.87;
                letter-spacing: normal;
                color: $color-black;
                text-transform: uppercase;
            }
        }
    }
}

.template-account-order-subtitle {
    display: none;
}

// My address
.template-account-addresses {
    margin-bottom: 80px;
    .account-address {
        p {
            font-size: 15px;
            line-height: 1.73;
            letter-spacing: normal;
            color: #2d2d2d;
        }
    }

    h2 {
        max-width: max-content;
        font-size: 15px;
        line-height: 1.56;
        letter-spacing: normal;
        color:$color-23;
        font-family: $font-montser;
        padding-bottom: 10px;
        border-bottom: 2px solid $color-df;
        text-transform: uppercase;
    }
}

.template-account-addresses-title {
    font-size: 40px;
    font-weight: 800;
    letter-spacing: 8px;
    text-align: center;
    color: #000000;
    margin:50px 0;
    text-transform: uppercase;
}

// tablet
@media (min-width:768px) {
    .js-account-nav {
        display: none;
    }
}

// Mobile account
@media (max-width:1024px) {
    .columns-main {
        .sidebar.sidebar-main {
            margin-right: 50px;
        }

        .template-account-order-history,.account-order-history,.content-my-account {
            width: calc(100% - 197px);
        }
    }

    .template-account {
        padding: 0 50px;
        .account-order-history {
            width: 100%;
        }
    }

    body.page-template-customers\/account\.order { 
        .site-main {
            padding: 0 50px;
        }
    }
}

@media (max-width:767px) {
    .template-account, .template-account-order {
        margin: 0 0 60px 0;
    }

    // Order details
    body.page-template-customers\/account\.order {
        .site-main {
            padding: 0 30px;
        }

        .account-order-history  {
            width: 100%;
            margin-top: 20px;
        }

        .account-order-history h2 {
            font-size: 16px;
            font-style: normal;
            line-height: 1.63;
            letter-spacing: normal;
            color: #232323;
        }
        
    }

    .account-order-history-orders {
        thead {
            display: none;
        }

        tr {
            display: block;
            td {
                display: block;
                padding: 2px 0;
                position: relative;
                text-align: left;
                padding-left: 117px;
                font-size: 15px;
                font-style: normal;
                line-height: 1.73;
                letter-spacing: normal;
                color: #2d2d2d;
            }

            td:before {
                content: attr(data-th) '';
                display: inline;
                font-weight: 700;
                position: absolute;
                left: 30px;
            }
        }
    }
   
    .account__order-details,.template-account,.account__order-history,.template-account-order {
        h1 {
            font-size: 22px !important;
            letter-spacing: 4px ;
            text-align: center;
            color: #000000;
            margin: 20px 0 30px 0 !important;
        }
    }

    // Order history 
    body.page-template-customers\/order {
        .site-main {
            padding: 0 0 50px 0;
        }
    }
    
    .columns-main {
        display: grid;

        .sidebar.sidebar-main {
            width: 100%;
            display: none;
        }

        .js-account-nav {
            -webkit-appearance: none;
            -moz-appearance: none;
            appearance: none;
            position: relative;
            background-repeat: no-repeat;
            background-size: 10px;
            background-position: 98% center;
            padding: 0 16px;
            background-image: url("{{ 'arrow-select.png' | asset_url }}");
            height: 42px;
            border: none;
        }

        .template-account-order-history,.content-my-account {
            width: 100%;
            margin-top: 15px;
            h2 {
                font-size: 16px;
                line-height: 1.63;
            }
            .header-infor-history ul li  {
                padding:0 0 10px 0;
            }

            .account-order {
                .order-item-image {
                    width: 112px;
                    img {
                        width: 112px;
                    }
                }

                tr {
                    position: relative;
                    .order-item-title  {
                        padding-top: 20px;
                        vertical-align: top;
                        a {
                            font-size: 14px;
                            line-height: 1.86;
                            letter-spacing: normal;
                            text-align: left;
                        }
                    }

                    .order-item-quantity {
                        position: absolute;
                        left: 130px;
                        bottom: 26px;
                        font-size: 15px;
                        font-weight: bold;
                        line-height: normal;
                        letter-spacing: normal;
                        color: #3f3f3f;
                        font-family: 'inter-bold';
                    }

                    .order-item-total {
                        vertical-align: bottom;
                        padding-bottom: 26px;
                        color: #000;
                        font-size: 16px;
                        line-height: 1.63;
                    }
                }

                .account-order-totals {
                    width: 100%;
                    margin-top: 25px;
                }
                
            }
        }

    }

    // my dashboard 
    .template-account {
        padding: 0 30px;
        h1 {
            letter-spacing: 3px!important;
        }

        .account-order-history {
            width: 100%;
        }
        .columns-main {
            .content-my-account {
                .title-account {
                    font-size: 19px;
                    line-height: 1.68;
                }
                
                h2 {
                    font-size: 16px;
                    line-height: 1.63;
                }

                .account-info {
                    p,span {
                        margin: 3px 0;
                        font-size: 15px;
                        line-height: 1.73;
                        color: #2d2d2d;
                        text-decoration: none;
                        a {
                            color: #2d2d2d;
                            text-decoration: none;
                        }
                    }
                }

                .account-address {
                    .billing-address,.shipping-address {
                        width: 100%;
                        margin-bottom: 15px;
                        h2 {
                            font-size: 14px;
                            line-height: 1.71;
                            margin-bottom: 15px;
                        }

                        p {
                            font-size: 15px;
                            line-height: 1.73;
                            span {
                                margin-bottom: 0;
                            }
                        }
                    }
                }

                .account-order-history {
                    display: none;
                }

                .account-additional, .account-info , .container-address {
                    margin-bottom: 35px;
                }

                
            }
        }
    }
}

// Order history

.account__order-details {
    h1 {
        letter-spacing: 8px;
        text-align: center;
        color: $color-black;
        font-size: 40px ;
        font-family: $font-montser;
        text-transform: uppercase;
        margin-bottom: 70px;
    }
}

.template-account {
    .account-order-history {
        width: 100%;
    }

    .account-address span {
        margin-bottom: 10px;
    }
}

.template-account-order-history,.account-order-history {
    width: calc(100% - 273px);
    .template-account-order-shipping-info {
        display: none;
    }

    .account-order {
        .order-item-image {
            width: 114px;
            img {
                width: 114px;
            }
        }

        .order-item-title {
            width: 50%;
        }
    }

    .account-order-history-orders {
        tr {
            th {
                text-transform: uppercase;
                font-size: 15px;
                font-weight: bold;
                line-height: 1.87;
                letter-spacing: normal;
                color: #000000;
                font-family: 'Montserrat-Bold';
            }

            td {
                a {
                    text-transform: uppercase;
                    font-size: 15px;
                    line-height: 1.73;
                    letter-spacing: normal;
                    text-align: center;
                    color: #2d2d2d;
                    font-family: 'inter_regular';
                }
            }
        }
    }

    .title-history,h2 {
        font-family: 'Montserrat-ExtraBold';
        font-size: 18px;
        line-height: 1.56;
        letter-spacing: normal;
        color: #232323;
        border-bottom: 2px solid #dfdfdf;
        max-width: max-content;
        padding-bottom: 12px;
        text-transform: uppercase;
        margin-bottom: 30px;
    }

    .header-infor-history {
        ul {
            list-style-type: none;
            padding-left: 0;
            li {
                padding: 0px 0 20px 0;
                display: flex;
                span {
                    width: 80%;
                    &:first-child {
                        width: 20%;
                        font-weight: 600px;
                        font-family: 'inter-bold';
                    }
                }
            }
        }
    }
   
}

// My wishlist 
body.page-template-page\.wishlist {
    h1 {
        letter-spacing: 8px;
        text-align: center;
        color: $color-black;
        font-size: 40px !important;
        font-family: $font-montser;
        text-transform: uppercase;
        margin-bottom: 70px;
    }

    .wishlist {
        width: calc(100% - 273px);
    }
}
   

