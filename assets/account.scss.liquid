// Account login

$color-black: #000000;
$color-white: #ffffff;
$font-montser: 'Montserrat-ExtraBold';
$color-2d:#2d2d2d;

.template-account-login,.template-account-register{
    max-width: 525px;
    h1 {
        letter-spacing: 8px;
        text-align: center;
        color: $color-black;
        font-size: 40px !important;
        font-family: $font-montser;
        text-transform: uppercase;
        margin-bottom: 70px;
    }

    .errors {
        ul {
            background-color: $color-2d;
            color: $color-black;
            padding: 7px 10px 7px 16px;
            li {
                list-style-type: none;
                color: $color-white;
            }
        }
    }

    .template-account-login-title-forgot-pw {
        display: none;
    }

    .account-recovery-toggle {
        font-size: 14px;
    }

    .account-register {
        display: none;
    }

    .submit-button,.btn-register {
        text-align: center;
        margin-top: 50px;
    }
}

@media (max-width: 767px) {
    .template-account-login,.template-account-register {
        padding-bottom: 35px;
        h1{
            font-size: 22px !important;
            margin: 18px 10px 28px 10px;
            line-height: normal;
            letter-spacing: 4px;
            padding-top: 18px;
        }

        .submit-button,.btn-register {
            margin-top: 30px;
        }

    }
}

// Reset password
.forgot-password {
    .template-account-login  {
        display: block;
        max-width: 800px;
        padding-bottom: 90px;
        .template-account-login-title-forgot-pw {
            display: block;
            margin-bottom: 74px;
        }
        .template-account-login-title {
            display: none;
        }

        .account-recovery {
            max-width: 525px;
            margin: 0 auto;
            p {
                font-size: 16px;
                line-height: 1.63;
                letter-spacing: normal;
                color: $color-2d;
                margin-bottom: 50px;
            }
        }

        .btn-resetpw {
            margin-top: 50px;
            text-align: center;
        }
    }
}

@media (max-width: 767px) {
    .forgot-password {
        .template-account-login {
            padding-bottom: 35px;
            .template-account-login-title-forgot-pw  {
                margin-bottom: 30px;
            }
            .account-recovery {
                p {
                    margin-bottom: 30px;
                }
            }

            .btn-resetpw  {
                margin-top: 30px;
            }
        }
    }
}

