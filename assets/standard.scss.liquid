// About pages
.page-template-page\.about-us {
    .site-main .page {
        max-width: 1300px !important;
    }

    .masthead-title {
        margin: 84px 0 80px 0;
    }
}
.page-about {
    .banner-page {
        img {
            width: 100%;
            display: block;
        }
    }

    .page-content {
        padding: 80px 0 15px 0;
        font-size: 16px;
        line-height: 26px;
    }
    .table-about-us {
        display: none;
        border-collapse: collapse;
        margin-top: 35px;
        font-size: 14px;
        td,
        th {
            border-bottom: 1px solid #ddd;
            padding: 20px 0;
            text-transform: uppercase;
            width: 50%;
            vertical-align: top;
            padding-right: 10px;
        }
    }
}

@media (max-width: 767px) {
    .page-template-page\.about-us {
        .masthead-title {
            font-size: 22px;
            letter-spacing: 4px;
            margin: 18px 0 32px;
        }

        .site-main .page {
            padding: 0;
        }

        .page-content {
            padding: 30px;
            p {
                font-size: 16px;
                line-height: 1.63;
                margin: 0;
            }
        }
    }
}