$color-black: #000000;
$color-white: #ffffff;
$font-montser: 'Montserrat-ExtraBold';
$color-2d:#2d2d2d;
$color-23: #232323;
$color-df: #dfdfdf;
$font-inter-regular: 'inter_regular';
.page-template-article {
    .article-publication-info {
        font-size: 14px;
        line-height: 1.86;
        letter-spacing: normal;
        text-align: left;
        &:first-child {
            display: none;
        }
    }
    .article-title {
        font-family: $font-montser;
        font-size: 40px;
        line-height: normal;
        letter-spacing: 8px;
        color: $color-black;
        text-align: center;
        text-transform: uppercase;
        margin-top: 85px;
        margin-bottom: 80px;
    }
    .article-rte h2 {
        font-size: 28px;
        line-height: 1.14;
        letter-spacing: normal;
        color: $color-black;
        font-family: $font-montser;
        margin-top: 7px;
        margin-bottom: 26px;
    }
    .article-publication-info-seperator,
    .article-author {
        display: none;
    }
    .share-buttons-wrapper {
        text-align: center;
        .share-buttons {
            display: none;
        }
        .share-buttons-label {
            display: flex;
            justify-content: center;
            font-size: 15px;
            line-height: normal;
            letter-spacing: normal;
            color: $color-black;
            text-transform: uppercase;
        }
        .share-button {
            margin-left: 18px;
            margin-top: -2px;
        }
    }
}

@media (max-width: 767px) {
    .page-template-article {
        .article-title {
            font-size: 22px;
            letter-spacing: 4px;
            margin: 20px 10px 30px 10px
        }
        .article-rte {
            margin-bottom: 80px;
            h2 {
                font-size: 19px;
                line-height: 1.68;
                margin-bottom: 17px;
            }
            p {
                font-size: 16px;
                line-height: 1.63;
            }
        }
        .article-pagination-blog,
        .article-pagination-next-post,
        .article-pagination-previous-post {
            width: 100%;
            max-width: 187px;
            margin: 0 auto;
        }
        .btn-next {
            margin-left: 0;
            margin-top: 10px;
            display: flex;
        }
        .btn-prev {
            margin-bottom: 10px;
            display: flex;
            margin-right: 0;
        }
        .btn-pagination {
            display: flex;
            margin-right: 0;
        }
        .article-pagination {
            padding: 0;
            display: block;
        }
        .article-date {
            margin-bottom: 0;
        }
        .article-publication-info {
            display: block;
        }
        .article {
            padding: 18px 27px 43px;
        }
    }
}

// Blog
.page-template-blog {
    #shopify-section-static-blog {
        max-width: 1070px;
        margin: 0 auto;
        margin-bottom: 180px;
        .desktop-social {
            display:none;
        }
        
        .pagination {
            margin: 30px 0;
        }
    }
    .blog-rss-feed {
        display: none;
    }
    .page-title {
        font-family: $font-montser;
        font-size: 40px;
        line-height: normal;
        letter-spacing: 8px;
        color: $color-black;
        text-align: center;
        text-transform: uppercase;
        margin: 80px 0;
    }
    .article-excerpt-content {
        .article-excerpt-date {
            font-family: $font-inter-regular;
            font-size: 14px;
            line-height: 1.86;
            color: $color-black;
            margin-bottom: 5px;
        }
        .article-excerpt-title {
            font-size: 18px;
            line-height: 1.56;
            letter-spacing: normal;
            color: $color-23;
            font-family: $font-montser;
            a {
                text-decoration: none;
                text-transform: uppercase;
                color: black;
            }
        }
        .article-excerpt-rte {
            margin-top: 15px;
            font-size: 15px;
            line-height: 1.73;
            letter-spacing: normal;
            color: $color-2d;
            margin-bottom: 20px;
            display: -webkit-box;
            -webkit-line-clamp: 5;
            -webkit-box-orient: vertical;
            overflow: hidden;
            height: 125px;
        }
        .article-excerpt-read-more {
            color: $color-2d;
            text-decoration: none;
            font-size: 15px;
            line-height: 1.73;
            letter-spacing: normal;
            margin-bottom: 20px;
        }
    }
}

@media (min-width: 961px) and (max-width: 1024px) {
    .page-template-blog {
        #shopify-section-static-blog {
            margin: 0 50px;
        }
    }
}

